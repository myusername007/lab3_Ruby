<div class="card mb-4">
  <% if @castle.image_url.present? %>
    <img src="<%= @castle.image_url %>" class="card-img-top" style="height:300px; object-fit:cover;">
  <% end %>

  <div class="card-body">
    <h2><%= @castle.name %></h2>
    <p><strong>Region:</strong> <%= @castle.region %></p>
    <p><strong>Year:</strong> <%= @castle.built_year %></p>

    <p class="mt-3"><%= @castle.description %></p>

    <%= link_to "Back", castles_path, class: "btn btn-secondary" %>

    <% if user_signed_in? %>
      <%= link_to "Edit", edit_castle_path(@castle), class: "btn btn-warning" %>
      <%= link_to "Delete", @castle, method: :delete, data: { confirm: "Delete?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
